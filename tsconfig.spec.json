{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "d3",
      "jasmine",
      "jquery",
      "node",
      "ids-enterprise-typings"
    ]
  },
  "angularCompilerOptions": {
    "declaration": false,
    "module": "esnext",
    "importHelpers": true,
    "resolveJsonModule": true,
    "target": "es2015",
    "strict": true
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist/**/*"
  ]
}
