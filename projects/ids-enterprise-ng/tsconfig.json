{
  "extends": "../../tsconfig.json",
  "compileOnSave": false,
  "compilerOptions": {
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "outDir": "../../out-tsc/spec",
    "types": [
      "d3",
      "jasmine",
      "jquery",
      "node",
      "ids-enterprise-typings"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "paths": {
      "@ids-enterprise": [
        "../ids-enterprise/src/"
      ],
      "@ids-enterprise/*": [
        "../ids-enterprise/src/"
      ]
    },
  },
  "angularCompilerOptions": {
    "declaration": false,
    "module": "esnext",
    "importHelpers": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "target": "es2015",
    "strict": true
  },
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist/**/*"
  ]
}
